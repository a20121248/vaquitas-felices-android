<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bt_venta"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_min_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/rc_solid_white"
            android:elevation="@dimen/button_elevation"
            android:orientation="horizontal"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom|end"
                android:shadowColor="@color/black"
                android:text="Registrar Venta"
                android:textAllCaps="false"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_materiales"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_min_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/rc_solid_white"
            android:elevation="@dimen/button_elevation"
            android:orientation="horizontal"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom|start"
                android:shadowColor="@color/black"
                android:text="Materiales usados"
                android:textAllCaps="false"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bt_new_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_min_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/rc_solid_white"
            android:elevation="@dimen/button_elevation"
            android:orientation="horizontal"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom|end"
                android:shadowColor="@color/black"
                android:text="Registrar Usuario"
                android:textAllCaps="false"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_necesidad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_min_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/rc_solid_white"
            android:elevation="@dimen/button_elevation"
            android:orientation="horizontal"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom|start"
                android:shadowColor="@color/black"
                android:text="Necesidad de Productos"
                android:textAllCaps="false"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_degustaciones"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_min_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/rc_solid_white"
            android:elevation="@dimen/button_elevation"
            android:orientation="horizontal"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom|end"
                android:shadowColor="@color/black"
                android:text="Registrar Degustaciones"
                android:textAllCaps="false"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
